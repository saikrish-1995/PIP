<?xml version="1.0" encoding="UTF-8"?>
<jcr:root
	xmlns:jcr="http://www.jcp.org/jcr/1.0"
	xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
	xmlns:cq="http://www.day.com/jcr/cq/1.0"
	xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Let us help"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[cq.author.multifield]">
	<content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/tabs">
		<items jcr:primaryType="nt:unstructured">
			<general-tab
                jcr:primaryType="nt:unstructured"
                jcr:title="General tab"
                sling:resourceType="granite/ui/components/coral/foundation/container"
                margin="{Boolean}true">
				<items jcr:primaryType="nt:unstructured">
					<container
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
						<items jcr:primaryType="nt:unstructured">
							<column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
								<items jcr:primaryType="nt:unstructured">
									<heading
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Heading"
                                        name="./heading"
                                        required="{Boolean}true"/>
									<description
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                        fieldLabel="Description"
                                        name="./description"/>
									<first-dropdown-label
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="First dropdown label"
                                        name="./firstDropdownLabel"/>
									<second-dropdown-label
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Second dropdown label"
                                        name="./secondDropdownLabel"/>
								</items>
							</column>
						</items>
					</container>
				</items>
			</general-tab>
			<dropdown-values-tab
                jcr:primaryType="nt:unstructured"
                jcr:title="Dropdown values tab"
                sling:resourceType="granite/ui/components/coral/foundation/container"
                margin="{Boolean}true">
				<items jcr:primaryType="nt:unstructured">
					<columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
						<items jcr:primaryType="nt:unstructured">
							<column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
								<items jcr:primaryType="nt:unstructured">
									<dropdown-list
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                        composite="{Boolean}true"
                                        fieldLabel="Dropdown list"
                                        renderReadOnly="{Boolean}true">
										<field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/container"
                                            margin="{Boolean}true"
                                            name="./dropdownList">
											<items jcr:primaryType="nt:unstructured">
												<option
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/container"
                                                    margin="{Boolean}true">
													<items jcr:primaryType="nt:unstructured">
														<option-title
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Option title"
                                                            name="./optionTitle"/>
														<option-texts
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                            composite="{Boolean}true"
                                                            fieldLabel="Option text"
                                                            renderReadOnly="{Boolean}true">
															<field
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/foundation/container"
                                                                margin="{Boolean}true"
                                                                name="./optionTexts">
																<items jcr:primaryType="nt:unstructured">
																	<option
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/foundation/container"
                                                                        margin="{Boolean}true">
																		<items jcr:primaryType="nt:unstructured">
																			<option-text
                                                                                jcr:primaryType="nt:unstructured"
                                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                                fieldLabel="Option text"
                                                                                name="./optionText"/>
																			<option-value
                                                                                jcr:primaryType="nt:unstructured"
                                                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                                                fieldLabel="Option value"
                                                                                name="./optionValue"
                                                                                rootPath="/content"/>
																		</items>
																	</option>
																</items>
															</field>
														</option-texts>
													</items>
												</option>
											</items>
										</field>
									</dropdown-list>
								</items>
							</column>
						</items>
					</columns>
				</items>
			</dropdown-values-tab>
		</items>
	</content>
</jcr:root>